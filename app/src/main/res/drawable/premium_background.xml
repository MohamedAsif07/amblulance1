<!-- premium_background.xml -->

<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background -->
    <gradient
        android:startColor="#FF5733"
        android:endColor="#FFC300"
        android:angle="45"/>

    <!-- Optionally, you can add a stroke for border -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" />

    <!-- Rounded corners -->
    <corners
        android:radius="12dp" />
</shape>
